{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "/opt/arduino/libraries**",
                "/opt/arduino/**",
                "/opt/arduino/**",
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.17763.0",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "msvc-x64"
        },
        {
            "name": "Linux",
            "includePath": [
                "/opt/arduino/tools/**",
                "/opt/arduino/hardware/arduino/avr/**"
            ],
            "forcedInclude": [
                "/opt/arduino/hardware/arduino/avr/cores/arduino/Arduino.h"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cppStandard": "c++17",
            "cStandard": "c99"
        }
    ],
    "version": 4
}